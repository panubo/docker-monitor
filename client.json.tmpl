{
    "client": {
        "name": "{{ .Env.HOSTNAME }}",
        "address": "{{ if (has .Env "IPADDRESS") }}{{ .Env.IPADDRESS }}{{ else }}{{ .Env.HOSTNAME }}{{ end }}",
{{- if (has .Env "SENSU_CLIENT_SIGNATURE") }}
        "signature": "{{ .Env.SENSU_CLIENT_SIGNATURE }}",
{{- end }}
        "subscriptions": {{ .Env.SENSU_CLIENT_SUBSCRIPTIONS | strings.Split "," | toJSON }}
    }
}
